    // HOME VISIT VALUES
    $(document).ready(function () {
        // address input
        $('.address').keyup(function () {
            var result = $(this).val();
            if (result.length > 0) {
                $('.addressResult').html('<strong>Your Address: </strong>' + result + '<br />');
            } else {
                $('.addressResult').text(" ");
            }
        });
        // phone number input
        $('.phonenumber').keyup(function () {
            var result = $(this).val();
            if (result.length > 0) {
                $('.phone-number').html('<strong>Your Phone Number: </strong>' + result + '<br />');
            } else {
                $('.phone-number').text(" ")
            }
        });
        //select option 
        function displayVals() {
            var cityValues = $("#city").val();
            var areaValues = $("#area").val();
            var labBranch = $("#labBranch").val();

            $(".citycla").html('<strong>Your City: </strong>' + cityValues + '<br />');
            $(".areacla").html('<strong>Your Area: </strong>' + areaValues + '<br />');
            $(".branchcla").html('<strong> Lab Branch: </strong>' + labBranch + '<br />');
        }
        $("select").change(displayVals);

        //textarea 
        $('#textArea').keyup(function(){
            var result = $(this).val();
            if (result.length > 0) {
                $('.textarea').html('<strong>Your Message: </strong>' + result + '<br />');
            } else {
                $('.textarea').text(" ")
            }
        });

    });
